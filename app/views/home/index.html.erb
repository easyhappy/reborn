<div class="index-flash">
  <%= image_tag("flash.jpg") %>
</div>
<div class="index-focus">         
  <div id="home_pic_show">
  </div>
</div>

<div class="index-gsdt">
  <div class="title">
      <h2>公司动态</h2>
  </div>
  <div class="main">
    <dl>
      <% @company_news.each do |news| %>
        <dt>
          <%= link_to news.name, company_news_path(news), :target => :_blank %>
        </dt>
        <dd>
          [<%= news.created_at.strftime("%Y-%m-%d")%>]
        </dd>
      <% end %>
    </dl>
  </div>
</div>

<script type='text/javascript'>
  var data = [{src:'/assets/demo_0.jpg',
              href:'/', alt: '苏州开泰再生资源有限公司'},
            {src:'/assets/demo_1.jpg',
              href:'/'}
           ];             
  $(document).ready(function(){
    $('#home_pic_show').d_imagechange({
      data:data,
      width:350, 
      height:200,
      playTime:10000,
      animateTime:1000,
      bg:false, title:false, desc:false,bgHeight:25,btnFontSize:10,
      animateStyle:'o'
    });
  });
</script>
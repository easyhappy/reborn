= form_for(@message, :url => message_path(@message)) do |f|
  = f.text_field :email, :required => false, :autofocus => true, :class => "form-control", :placeholder => "请输入邮箱或者手机号 方便我们联系您"
  = f.text_area :content, :required => false, :autofocus => true, :class => "form-control_area", :placeholder => "留言内容"
  = f.submit "登陆", :class => :submit
